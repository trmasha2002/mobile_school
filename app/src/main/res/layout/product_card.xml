<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@color/background">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="64dp"
            android:layout_height="64dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>

    <EditText
            android:id="@+id/productName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/productCount"
            app:layout_constraintBottom_toTopOf="@id/shelf_life"
            app:layout_constraintStart_toStartOf="@+id/shelf_life"

            android:textSize="30sp"
            android:hint="@string/product_name"
            android:padding="1dp"
            android:singleLine="true"
            android:textColor="@color/textCard"

            android:text="Test name "/>

    <EditText
            android:id="@+id/productCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/productName"
            app:layout_constraintEnd_toEndOf="@+id/shelf_life"
            app:layout_constraintStart_toEndOf="@+id/productName"
            app:layout_constraintBottom_toBottomOf="@+id/productName"

            android:textSize="30sp"
            android:padding="1dp"
            android:singleLine="true"
            android:textColor="@color/textCard"

            android:text="26"/>

    <EditText
            android:id="@+id/shelf_life"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/productName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/logo"

            android:textSize="30sp"
            android:padding="1dp"
            android:singleLine="true"
            android:textColor="@color/textCard"

            android:text="Shelf life delete too :)"/>


</android.support.constraint.ConstraintLayout>